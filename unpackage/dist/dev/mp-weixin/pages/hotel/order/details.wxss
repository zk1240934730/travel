
.details-box {
	display: block;
	margin-bottom: 120rpx;
}
.details-state-box {
	background: #0086F6;
}
.details-state {
	width: 90%;
	margin: 0px auto;
	height: 100rpx;
	padding: 20rpx 0;
}
.state-icon {
	display: inline-block;
	vertical-align: middle;
	margin-right: 20rpx;
}
.state-icon ._i {
	color: #fff;
	font-size: 90rpx;
	line-height: 100%;
}
.state-list {
	display: inline-block;
	vertical-align: middle;
}
.state-list text:first-child {
	font-size: 40rpx;
}
.state-list text {
	display: block;
	color: #fff;
	font-size: 26rpx;
	line-height: 50rpx;
}
.details-order {
	display: block;
	background: #fff;
	margin-bottom: 20rpx;
	padding: 20rpx;
	position: relative;
}
.details-order ._p {
	display: block;
	font-size: 24rpx;
	color: #999;
}
.details-order ._p:first-child {
	font-size: 32rpx;
	font-weight: bold;
	color: #ff6600;
}
.details-order ._p:first-child ._i {
	margin-left: 16rpx;
	color: #0086F6;
}
.details-content {
	display: block;
	background: #fff;
	margin-top: 20rpx;
}
.details-title {
	display: block;
	height: 80rpx;
	line-height: 80rpx;
	border-bottom: 1rpx solid #f2f2f2;
	font-weight: bold;
	text-indent: 20rpx;
}
.hotel-details {
	display: block;
	padding: 20rpx;
}
.hotel-details ._p {
	display: block;
	font-size: 26rpx;
	color: #505050;
	line-height: 60rpx;
}
.hotel-details ._p text {
	margin-left: 20rpx;
	color: #0086F6;
}
.hotel-details ._p.tips {
	color: #d90000;
}
.hotel-details ._p:first-child {
	font-weight: bold;
	color: #333;
}
.check-in {
	display: block;
	padding: 20rpx;
}
.check-in text {
	width: 33.33%;
}
.contact-time {
	display: block;
	padding: 20rpx;
	border-top: 1rpx solid #f2f2f2;
}
.contact-time text {
	margin-right: 20rpx;
}
.hotel-reception {
	display: block;
	padding: 20rpx;
}
.details-footer {
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 100rpx;
	background: #fff;
	border-top: 1rpx solid #eee;
	text-align: center;
}
.details-footer button {
	display: inline-block;
	width: 41%;
	border-radius: 100rpx;
	margin: 0 20rpx;
	margin-top: 10rpx;
}
.invoice-details {
	display: block;
	padding: 20rpx 20rpx 10rpx 20rpx;
	overflow: hidden;
}
.invoice-details ._p {
	display: block;
	color: #666;
	margin-bottom: 10rpx;
	font-size: 26rpx;
}

