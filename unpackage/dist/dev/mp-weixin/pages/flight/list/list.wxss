
.list-data {
	position: fixed;
	width: 100%;
	top: 0rpx;
	left: 0;
	z-index: 9;
	background: #fff;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 120rpx;
	padding-top: 10rpx;
}
.month-date {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	overflow-y: auto;
}
.month-date-box {
	width: 100%;
	height: 120rpx;
	overflow-y: hidden;
	overflow-x: auto;
}
.month-date-list {
	width: 3600rpx;
}
.month-date-list view {
	display: inline-block;
	text-align: center;
	width: 120rpx;
	border-radius: 10rpx;
}
.month-date-list view text {
	display: block;
	font-size: 24rpx;
	color: #666;
	line-height: 36rpx;
}
.month-date-list view text.week {
	font-size: 20rpx;
}
.month-date-list view.active {
	background: #007AFF;
}
.month-date-list view.active text {
	color: #fff;
}
.set-calendar {
	float: right;
	width: 120rpx;
	background: #fff;
	text-align: center;
	color: #0086F6;
	border-left: 1rpx solid #eee;
	line-height: 40rpx;
}
.set-calendar text {
	display: block;
	font-size: 24rpx;
}
.set-calendar ._i {
	margin-top: 20rpx;
}
.go-trip {
	width: 96%;
	margin: 0px auto;
	background: #E3F2FF;
	margin-bottom: 20rpx;
	border-radius: 10rpx;
	height: 80rpx;
	line-height: 80rpx;
	color: #0086F6;
	font-size: 26rpx;
}
.go-trip ._i {
	color: #fff;
	background: #0086F6;
	height: 36rpx;
	line-height: 36rpx;
	width: 36rpx;
	text-align: center;
	font-size: 22rpx;
	border-radius: 6rpx;
	margin: 0 10rpx;
	vertical-align: middle;
}
.go-trip text {
	margin-left: 10rpx;
}
.list-box {
	display: block;
	margin-top: 150rpx;
	margin-bottom: 120rpx;
}
.list {
	width: 96%;
	margin: 0px auto;
	background: #fff;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-bottom: 20rpx;
	border-radius: 10rpx;
	padding: 20rpx 0;
}
.list-r {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	padding-left: 20rpx;
}
.list-airport {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.list-airport view {
	position: relative;
}
.list-airport view text {
	display: block;
	color: #666;
	line-height: 50rpx;
	font-size: 26rpx;
}
.list-airport .day {
	position: absolute;
	top: 0;
	right: -6rpx;
	font-size: 20rpx;
	color: #0086F6;
	z-index: 2;
}
.list-airport view text:first-child {
	color: #333;
	font-size: 40rpx;
	font-weight: bold;
}
.stop-over {
	text-align: center;
	position: relative;
}
.stop-over image {
	width: 110rpx;
	height: 16rpx;
	margin-top: 36rpx;
}
.stop-over ._em {
	position: absolute;
	top: 34rpx;
	left: 20%;
	z-index: 1;
	font-size: 20rpx;
	line-height: 30rpx;
	background: #fff;
	color: #999;
	padding: 0 6rpx;
}
.aircraft-info {
	display: block;
	font-size: 24rpx;
	color: #999;
	margin-top: 10rpx;
}
.aircraft-info image {
	width: 28rpx;
	height: 28rpx;
	vertical-align: middle;
	margin-right: 4rpx;
}
.aircraft-info text {
	color: #09BB07;
	margin-left: 10rpx;
}
.list-price {
	float: right;
	color: #f60;
	text-align: right;
	width: 230rpx;
	margin-right: 10rpx;
}
.list-price ._p {
	display: block;
}
.list-price ._p.price {
	font-size: 40rpx;
	line-height: 100%;
	margin-bottom: 20rpx;
}
.list-price ._p.price text {
	font-size: 24rpx;
}
.list-price ._p ._em {
	display: inline-block;
	border: 1rpx solid #f60;
	border-radius: 30rpx;
	font-size: 24rpx;
	padding: 0 10rpx;
	margin-left: 10rpx;
	height: 30rpx;
	line-height: 30rpx;
}
.list-footer {
	position: fixed;
	width: 100%;
	left: 0;
	bottom: 0;
	background: #fff;
	height: 100rpx;
	line-height: 100rpx;
	border-top: 1rpx solid #eee;
	z-index: 9;
}
.list-footer view {
	display: inline-block;
	width: 33.33%;
	text-align: center;
	position: relative;
	color: #505050;
	font-size: 26rpx;
}
.list-footer view::after {
	content: '';
	position: absolute;
	right: 0;
	top: 6rpx;
	width: 1rpx;
	height: 40rpx;
	background: #eee;
	z-index: 10;
}
.list-footer ._i {
	font-size: 30rpx;
	vertical-align: middle;
	margin-right: 10rpx;
}
.list-footer view.active {
	color: #0086F6;
}
.list-footer view text {
	display: none;
}
.list-footer view.active text:last-child {
	display: none;
}
.list-footer view.active text {
	display: inherit
}
.screen-bg {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	z-index: 99;
	background: rgba(0, 0, 0, 0.5);
}
.screen-box {
	position: absolute;
	left: 0;
	bottom: 0;
	background: #fff;
	width: 100%;
}
.direct-share {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	border-bottom: 1rpx solid #eee;
}
.direct-share label {
	color: #999;
	height: 100rpx;
	line-height: 100rpx;
	padding: 0 30rpx;
}
.screen-content {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 600rpx;
}
.screen-left {
	float: left;
	width: 200rpx;
}
.screen-left view {
	display: block;
	height: 100rpx;
	line-height: 100rpx;
	border-bottom: 1rpx solid #eee;
	border-right: 1rpx solid #eee;
	text-align: center;
	color: #505050;
}
.screen-left view.active {
	border-right: none;
	color: #0086F6;
}
.screen-right {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	height: 600rpx;
	overflow: auto;
}
.screen-list {
	display: block;
	width: 92%;
	margin: 0px auto;
}
.screen-list-info {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;

	border-bottom: 1rpx solid #eee;
}
.screen-list-info view {
	height: 100rpx;
	line-height: 100rpx;
}

