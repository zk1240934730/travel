
page {
	background-color: #ffffff;
}
.login-title {
	width: 85%;
	margin: 0px auto;
	font-size: 60rpx;
	color: #333;
	padding: 100rpx 0;
	position: relative;
	font-weight: bold;
}
.login-title::after {
	content: '';
	position: absolute;
	left: 0;
	top: 156rpx;
	width: 200rpx;
	height: 30rpx;
	background: #F0AD4E;
	opacity: 0.2;
}
.login-box {
	width: 85%;
	margin: 0px auto;
}
.login-box view {
	margin-bottom: 20rpx;
}
.login-box button {
	display: block;
	margin-top: 20rpx;
}
.login-box input {
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	border-bottom: 1rpx solid #eee;
}
.retrieve-password {
	display: block;
	text-align: right;
	font-size: 24rpx;
}
.retrieve-password text {
	height: 80rpx;
	line-height: 80rpx;
	color: #0086F6;
}
.dynamic-reg {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 88%;
	margin: 0px auto;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	margin-top: 40rpx;
}
.dynamic-reg text {
	display: block;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 26rpx;
}
.login-ther {
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	z-index: 5;
}
.login-ther ._h5 {
	width: 90%;
	margin: 0px auto;
	text-align: center;
	border-bottom: 1rpx solid #eee;
	font-weight: normal;
}
.login-ther ._h5 text {
	color: #999;
	position: relative;
	background: #fff;
	bottom: -20rpx;
	padding: 0 20rpx;
}
.login-ther view {
	display: inline-block;
	width: 30%;
	text-align: center;
	padding: 50rpx 0 40rpx 0;
}
.login-ther view image {
	width: 80rpx;
	height: 80rpx;
}

