
.booking-list {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 98%;
	margin: 0 auto;
	background: #fff;
	border-radius: 10rpx;
	margin-top: 20rpx;
	padding: 20rpx 0;
}
.booking-list .l {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	padding-left: 20rpx;
}
.price {
	font-size: 40rpx;
	color: #f60;
	line-height: 100%;
	font-weight: bold;
}
.price text {
	font-size: 26rpx;
}
.booking-list .r {
	float: right;
	width: 200rpx;
	text-align: center;
}
.booking {
	display: inline-block;
	height: 60rpx;
	line-height: 60rpx;
	border-radius: 100rpx;
	background: -webkit-linear-gradient(left, #FDD100, #FF6600);
	background: linear-gradient(to right, #FDD100, #FF6600);
	color: #fff;
	width: 140rpx;
	margin-top: 44rpx;
	text-align: center;
}
.booking-surplus {
	display: inline-block;
	width: 140rpx;
	background: -webkit-linear-gradient(left, #FDD100, #FF6600);
	background: linear-gradient(to right, #FDD100, #FF6600);
	color: #fff;
	border-radius: 10rpx;
	padding: 1rpx;
	text-align: center;
	margin-top: 24rpx;
}
.booking-surplus text {
	display: block;
	font-size: 24rpx;
	background: #fff;
	color: #f60;
	width: 138rpx;
	margin: 0px auto;
	border-bottom-left-radius: 10rpx;
	border-bottom-right-radius: 10rpx;
}
.taxation {
	color: #999;
	font-size: 26rpx;
}

