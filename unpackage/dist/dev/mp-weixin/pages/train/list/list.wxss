.transfer-trip text {
	width: auto;
}
.transfer-time view {
	line-height: 30rpx;
}
.book-bg {
	display: block;
	background: #fafafa;
	border: 4rpx solid #fff;
	border-bottom-left-radius: 10rpx;
	border-bottom-right-radius: 10rpx;
}
.book-list {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 96%;
	margin: 0px auto;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	border-bottom: 1rpx solid #eee;
}
.book-list:last-child {
	border-bottom: none;
}
.book-list view {
	height: 120rpx;
	line-height: 120rpx;
