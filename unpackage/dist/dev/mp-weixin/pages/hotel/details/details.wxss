
page {
	background: #f5f6f7;
}
.hotel-pic {
	display: block;
	height: 400rpx;
	position: relative;
}
.hotel-pic image {
	width: 100%;
	height: 400rpx;
}
.hotel-pic ._em {
	position: absolute;
	right: 20rpx;
	bottom: 20rpx;
	z-index: 5;
	font-size: 24rpx;
	color: #fff;
	height: 50rpx;
	line-height: 50rpx;
	border-radius: 50rpx;
	padding: 0 20rpx;
	background: rgba(0, 0, 0, 0.5);
}
.hotel-pic ._em ._i {
	font-size: 24rpx;
	vertical-align: -1rpx;
	margin-right: 10rpx;
}
.hotel-info {
	display: block;
	background: #fff;
}
.hotel-relevant-info {
	display: block;
	padding: 0 20rpx;
}
.hotel-name {
	display: block;
	padding: 20rpx 0 0 0;
	font-size: 32rpx;
}
.hotel-name text {
	font-size: 26rpx;
	color: #999;
	vertical-align: bottom;
	margin-left: 20rpx;
}
.hotel-address {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	border-bottom: 1rpx solid #f2f2f2;
	overflow: hidden;
	padding-bottom: 20rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.hotel-address-l {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.hotel-address-l ._p {
	font-size: 26rpx;
	color: #666;
	line-height: 36rpx;
}
.hotel-address-l ._p:last-child {
	font-size: 24rpx;
	color: #999;
	margin-top: 10rpx;
}
.hotel-address-r {
	float: right;
	width: 200rpx;
	height: 90rpx;
	line-height: 90rpx;
	text-align: right;
	color: #0086F6;
	font-size: 24rpx;
}
.hotel-address-r ._i {
	font-size: 24rpx;
	margin-left: 6rpx;
}
.info-list {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 90rpx;
	border-bottom: 1rpx solid #f2f2f2;
	overflow: hidden;
}
.info-list-l {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	height: 90rpx;
	line-height: 90rpx;
}
.info-list-r {
	float: right;
	width: 200rpx;
	height: 90rpx;
	line-height: 90rpx;
	text-align: right;
	color: #0086F6;
	font-size: 24rpx;
}
.info-list-r ._i {
	font-size: 24rpx;
	margin-left: 6rpx;
}
.datelist {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 90rpx;
	overflow: hidden;
	padding: 0 20rpx 0 20rpx;
	border-top: 20rpx solid #f5f6f7;
}
.datelist-l {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	height: 90rpx;
	line-height: 90rpx;
}
.datelist-l text {
	color: #999;
	margin: 0 10rpx;
}
.datelist-r {
	float: right;
	width: 200rpx;
	height: 90rpx;
	line-height: 90rpx;
	text-align: right;
	color: #0086F6;
	font-size: 24rpx;
}
.datelist-r ._i {
	font-size: 24rpx;
	margin-left: 6rpx;
}
.details-keyword {
	width: 100%;
	height: 100rpx;
	overflow-x: auto;
}
.details-keyword-list {
	width: 125%;
}
.details-keyword-list text {
	display: inline-block;
	height: 50rpx;
	line-height: 50rpx;
	background: #f2f2f2;
	margin-left: 20rpx;
	border-radius: 50rpx;
	padding: 0 20rpx;

	color: #666;
	font-size: 24rpx;
}
.date-top {
	top: 80rpx;
}
.room-list {
	display: block;
	background: #fff;
}
.room-list-info {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	overflow: hidden;
	padding: 20rpx 0;
	border-bottom: 1rpx solid #f2f2f2;
}
.room-list-l {
	float: left;
	width: 180rpx;
	height: 180rpx;
	margin: 0 20rpx;
}
.room-list-l image {
	width: 180rpx;
	height: 180rpx;
	border-radius: 10rpx;
}
.room-list-r {

	-webkit-box-flex: 1;

	-webkit-flex: 1;

	        flex: 1;
}
.room-info {
	float: left;
}
.room-info ._p {
	display: block;
	font-size: 26rpx;
	color: #666;
}
.room-info ._p.title {
	font-size: 34rpx;
	color: #333;
}
.room-info ._p ._em {
	font-size: 20rpx;
	margin-right: 10rpx;
	padding: 4rpx 6rpx 0 6rpx;
	line-height: 30rpx;
	border-radius: 6rpx;
}
.room-info ._p:last-child {
	margin-top: 10rpx;
}
.room-pirce {
	font-size: 24rpx;
	color: #999;
	text-align: right;
	float: right;
	margin-top: 36rpx;
	margin-right: 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.room-pirce ._em {
	font-size: 44rpx;
	color: #f60;
	font-weight: bold;
	margin-right: 6rpx;
}
.room-pirce ._em text {
	font-size: 30rpx;
	font-weight: normal;
}
.room-pirce ._i {
	font-size: 24rpx;
	margin-left: 6rpx;
}
.list-price-box {
	display: block;
	background: #f8f8f8;
}
.list-price {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	border-bottom: 1rpx solid #eee;
	padding: 20rpx 0;
}
.list-price-l {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	padding-left: 20rpx;
}
.list-price-l view {
	font-size: 26rpx;
	color: #404040;
}
.list-price-l view.title {
	font-weight: bold;
}
.list-price-l view text {
	margin-right: 20rpx;
}
.list-price-l view ._em {
	border-radius: 10rpx;
	font-size: 24rpx;
	line-height: 30rpx;
	padding: 0 10rpx;
	margin-right: 20rpx;
}
.list-price-r {
	float: right;
	width: 240rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.list-price-r view {
	display: inline-block;
}
.list-price-r view.price {
	color: #f60;
	font-size: 44rpx;
	font-weight: bold;
	width: 120rpx;
}
.list-price-r view.price text {
	font-weight: normal;
	font-size: 28rpx;
}
.list-price-r view.booking {
	text-align: center;
	width: 100rpx;
	color: #fff;
	background: -webkit-linear-gradient(left, #FDD100, #FF6600);
	background: linear-gradient(to right, #FDD100, #FF6600);
	border-radius: 10rpx;
	font-size: 32rpx;
	height: 103rpx;
	position: relative;
}
.list-price-r view.booking text {
	position: absolute;
	left: 1%;
	font-size: 24rpx;
	background: #fff;
	color: #f60;
	border-bottom-left-radius: 10rpx;
	border-bottom-right-radius: 10rpx;
	bottom: 2rpx;
	width: 98%;
}
.list-price-r view.topay {
	background: -webkit-linear-gradient(left, #Ff2200, #FF6600);
	background: linear-gradient(to right, #Ff2200, #FF6600);
}
.list-price-r view.topay text {
	color: #Ff2200;
}
.list-price-r view.gray {
	background: #ccc;
}
.list-price-r view.gray text {
	color: #ccc;
}
.installation {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 16rpx 0;
	border-bottom: 1rpx solid #f2f2f2;
}
.installation .info-list-l {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	line-height: 32rpx;
}
.installation .info-list-l view {
	display: inline-block;
	font-size: 24rpx;
	margin-right: 20rpx;
}
.installation .info-list-l view.dateails {
	font-size: 26rpx;
	color: #505050;
}
.installation .info-list-l view.facilities ._em {
	display: inline-block;
	font-size: 20rpx;
	color: #999;
	margin-right: 20rpx;
}
.installation .info-list-l view.facilities ._em ._i {
	font-size: 20rpx;
	margin-right: 6rpx;
}
.installation .info-list-l ._em ._i.icon-huiyi {
	font-size: 30rpx;
}
.installation .info-list-l ._em ._i.icon-_huabanfuben {
	font-size: 42rpx;
}
.comments {
	font-size: 26rpx;
	color: #666;
}
.comments ._strong {
	font-size: 40rpx;
	line-height: 100%;
	margin: 0 10rpx;
	color: #0086F6;
}

