
.booking-box {
	display: block;
	margin-bottom: 120rpx;
}
.voyage-top-info {
	display: block;
	background: #0086F6;
	padding-bottom: 10rpx;
}
.voyage-list {
	width: 96%;
	margin: 0px auto;
	color: #fff;
	position: relative;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 26rpx;
}
.voyage-list ._i {
	font-size: 24rpx;
	position: absolute;
	right: 0rpx;
	z-index: 1;
}
.voyage-list text {
	background: #fff;
	color: #0086F6;
	height: 32rpx;
	line-height: 32rpx;
	font-size: 24rpx;
	border-radius: 6rpx;
	padding: 0 4rpx;
	margin-right: 10rpx;
}
.voyage-list ._em {
	margin: 0 10rpx;
}
.voyage-price {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding: 20rpx;
	background: #fff;
	border-bottom: 1rpx solid #f2f2f2;
}
.voyage-price view:first-child {
	line-height: 80rpx;
}
.voyage-price ._p {
	display: block;
	text-align: right;
	font-size: 26rpx;
	color: #999;
}
.voyage-price ._p:first-child {
	font-size: 40rpx;
	font-weight: bold;
	line-height: 100%;
	color: #333;
}
.voyage-price ._p text {
	margin-left: 20rpx;
}
.passenger {
	display: block;
	background: #fff;
	margin-top: 20rpx;
	padding-bottom: 20rpx;
}
.passenger-menu {
	display: block;
	background: #fff;
	border-bottom: 1rpx solid #f2f2f2;
	height: 80rpx;
	line-height: 80rpx;
	padding-left: 20rpx;
	margin-bottom: 30rpx;
}
.passenger-menu text {
	margin-left: 20rpx;
	font-size: 24rpx;
	color: #999;
}
.add-passenger {
	width: 94%;
	margin: 0px auto;
	border: 1rpx solid #0086F6;
	border-radius: 10rpx;
	text-align: center;
	color: #0086F6;
	height: 80rpx;
	line-height: 80rpx;
	margin-top: 20rpx;
}
.add-passenger ._i {
	display: inline-block;
	vertical-align: middle;
	margin-right: 10rpx;
}
.frequent-box {
	display: block;
}
.booking-contact {
	display: block;
	margin: 20rpx 0;
	border-top: 1rpx solid #f2f2f2;
}
.contact-info {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 100rpx;
	line-height: 100rpx;
	background: #fff;
	border-bottom: 1rpx solid #f2f2f2;
	padding: 0 20rpx;
}
.contact-info view:first-child {
	line-height: 100rpx;
	width: 140rpx;
}
.contact-info view:last-child {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.contact-info view input {
	height: 100rpx;
	font-size: 28rpx;
}
.voyage-height {
	max-height: 800rpx;
	overflow-y: auto;
}
.zindex {
	z-index: 99999;
}

